exec $term
exec $browser
exec $email

xwayland enable
floating_modifier $mod
default_border normal 2
default_floating_border normal 2
titlebar_border_thickness 2
titlebar_padding 10 5
title_align center
smart_borders off
floating_minimum_size 600 x 450 
focus_follows_mouse yes
focus_on_window_activation smart
focus_wrapping no
gaps inner 4
gaps outer 0
smart_gaps off
mouse_warping container
tiling_drag enabled
workspace_auto_back_and_forth no

font pango:Inter Display Medium 12
client.focused           $surface0     $surface0 $text  $surface0 $surface0
client.focused_inactive  $surface0     $surface0 $text  $surface0 $surface0
client.unfocused         $crust        $crust    $text  $crust    $crust
client.urgent            $red          $red      $text  $red      $red

output "*" bg ~/wallpaper.png fill
output Virtual-1 res 1440x900

input "type:keyboard" {
    xkb_layout us
    xkb_variant ,
    xkb_options ctrl:menu_rctrl
}

input "type:pointer" {
    drag enabled
    dwt enabled
    drag_lock enabled
    natural_scroll enabled
    scroll_factor 0.40
    pointer_accel 0.15
    accel_profile flat
}

input "type:touchpad" {
    tap enabled
    drag enabled
    dwt enabled
    drag_lock enabled
    natural_scroll enabled
    scroll_factor 0.20
    scroll_method two_finger
    accel_profile flat
    pointer_accel 0.15
}

bindsym --to-code --inhibited {
    $mod+E layout toggle split tabbed
    $mod+SHIFT+E fullscreen
    $mod+T floating toggle
    $mod+M focus mode_toggle
    $mod+ALT+Q kill
    $mod+ALT+R exec pkill gammastep || gammastep -P -O 5000
    $mod+SHIFT+R reload

    $mod+$left focus left
    $mod+$right focus right
    $mod+$up focus up
    $mod+$down focus down

    $mod+ALT+$left move left
    $mod+ALT+$right move right
    $mod+ALT+$up move up
    $mod+ALT+$down move down

    $mod+SHIFT+$left resize shrink width 10px
    $mod+SHIFT+$right resize grow width 10px
    $mod+SHIFT+$down resize grow height 10px
    $mod+SHIFT+$up resize shrink height 10px

    $mod+Return exec swaymsg workspace $term_workspace && $term
    $mod+B exec swaymsg workspace $browser_workspace && $browser
    $mod+I exec $bin_path/idle toggle
    $mod+P exec flameshot gui
    $mod+SHIFT+P exec flameshot screen
    $mod+SHIFT+B exec pkill waybar || exec waybar

    $mod+Space exec $bin_path/rofi_launcher
    $mod+Slash exec $bin_path/rofi_calc
    $mod+SHIFT+Slash exec $bin_path/rofi_emoji
    $mod+Period exec $bin_path/rofi_cliphist
    $mod+SHIFT+Period exec $bin_path/rofi_notification_log
}
bindsym $mod+SHIFT+Delete exec $bin_path/lock
bindsym $mod+SHIFT+Escape exec \
    [[ "$(swaymsg -r -t get_inputs | jq -r '.[] | select(.type=="touchpad") | .libinput.send_events')" == "enabled" ]] && \
    swaymsg input "type:touchpad" events disabled || \
    swaymsg input "type:touchpad" events enabled
bindsym $mod+ALT+Escape exec \
    [[ "$(swaymsg -r -t get_inputs | jq -r '.[] | select(.type=="touch") | .libinput.send_events')" == "enabled" ]] && \
    swaymsg input "type:touch" events disabled || \
    swaymsg input "type:touch" events enabled

